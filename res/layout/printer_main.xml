<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_printer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_dotwidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dotwidth"
        android:textSize="30dip" />

    <TextView
        android:id="@+id/textView_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contrast"
        android:textSize="30dip" />

    <TextView
        android:id="@+id/textView_paperstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paperstatus"
        android:textSize="30dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_mode"
            android:layout_width="wrap_content"
            android:layout_height="70dip"
            android:layout_weight="5"
            android:text="@string/mode"
            android:textSize="30dip" />

        <Button
            android:id="@+id/button_changemode"
            android:layout_width="130dip"
            android:layout_height="70dip"
            android:layout_weight="1"
            android:text="@string/changemode" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/thumb3"
        android:thumbOffset="-5dip" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="90dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_print"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:text="@string/print" />

        <Button
            android:id="@+id/button_feed"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:text="@string/feed" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:text="@string/stop" />

        <Button
            android:id="@+id/button_continue"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:text="@string/Continue" />

        <Button
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_weight="1"
            android:text="@string/exit" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

</LinearLayout>